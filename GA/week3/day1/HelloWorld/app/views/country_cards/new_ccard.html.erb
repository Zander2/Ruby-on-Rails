<h1>Create a new country card</h1>

<%= form_for :country_card, url: country_cards_path do |f| %>
    <p>
        <%= f.label :country %><br>
        <%= f.text_field :country %>
    </p>

    <p>
        <%= f.label :regime_type %><br>
        <%= f.text_field :regime_type %>
    </p>

    <p>
        <%= f.label :sign_validate %><br>
        <%= f.check_box :sign_validate %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>